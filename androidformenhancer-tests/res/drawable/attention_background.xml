<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#2cb1e1" />

            <corners android:radius="8dp" />
        </shape>
    </item>
    <item
        android:bottom="0.8dp"
        android:left="0.8dp"
        android:right="0.8dp"
        android:top="0.8dp">
        <shape android:shape="rectangle" >
            <solid android:color="#a8dff4" />

            <corners android:radius="7dp" />

            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>

</layer-list>